<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="ee.bpw.dhx">
<CustomLevels>
    <CustomLevel name="EVENT" intLevel="0" />
  </CustomLevels>
  <Appenders>
    <CustomAppender name="CUSTOM">
    	<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    	 <filters>
            <LevelRangeFilter minLevel="EVENT" maxLevel="EVENT" onMatch="ACCEPT" onMismatch="DENY" />
		</filters>
    </CustomAppender>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    <RollingFile name="RollingFile" fileName="logs/event.log"
                 filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] ----- %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="24" modulate="false"/>
        <SizeBasedTriggeringPolicy size="1 MB"/>
      </Policies>
      <filters>
            <LevelRangeFilter minLevel="EVENT" maxLevel="EVENT" onMatch="ACCEPT" onMismatch="DENY" />
	</filters>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="ee.bpw" level="debug" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
      <AppenderRef ref="CUSTOM"/>
    </Logger>
    <Logger name="org.springframework.ws.client.MessageTracing" level="trace" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    
    <Root level="info" additivity="false">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>